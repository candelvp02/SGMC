<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HealtSync</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" />

    @await RenderSectionAsync("Styles", required: false)

    <style>
        :root {
            --primary-color: #0d6efd;
            --secondary-color: #6c757d;
            --success-color: #198754;
            --danger-color: #dc3545;
            --warning-color: #ffc107;
            --info-color: #0dcaf0;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
        }

        .navbar {
            box-shadow: 0 2px 4px rgba(0,0,0,.1);
        }

        .sidebar {
            min-height: calc(100vh - 56px);
            background-color: #343a40;
            padding-top: 20px;
        }

            .sidebar .nav-link {
                color: #fff;
                padding: 12px 20px;
                border-radius: 5px;
                margin-bottom: 5px;
                transition: all 0.3s ease;
            }

                .sidebar .nav-link:hover {
                    background-color: #495057;
                    transform: translateX(5px);
                }

                .sidebar .nav-link.active {
                    background-color: var(--primary-color);
                }

                .sidebar .nav-link i {
                    margin-right: 10px;
                    font-size: 1.2rem;
                }

        .content-wrapper {
            padding: 20px;
        }

        .card {
            box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,0.075);
            border: none;
            margin-bottom: 20px;
        }

        .card-header {
            font-weight: 600;
            border-bottom: 2px solid rgba(0,0,0,.125);
        }

        .page-title {
            color: #495057;
            font-weight: 600;
            margin-bottom: 20px;
        }

        footer {
            background-color: #343a40;
            color: #fff;
            padding: 20px 0;
            margin-top: 40px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <i class="bi bi-heart-pulse-fill"></i> HealtSync
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">

                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">

                        <a class="nav-link" href="#">
                            <i class="bi bi-person-circle"></i> Administrador
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="bi bi-box-arrow-right"></i> Cerrar Sesión
                        </a>

                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-3 col-lg-2 d-md-block sidebar">

                <div class="position-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">

                                <i class="bi bi-house-door"></i> Inicio
                            </a>
                        </li>
                        <li class="nav-item">

                            <a class="nav-link" asp-controller="PatientAdm" asp-action="Index">
                                <i class="bi bi-people"></i> Pacientes
                            </a>

                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Doctor" asp-action="Index">
                                <i class="bi bi-person-badge"></i> Doctores
                            </a>
                        </li>
                        <li class="nav-item">

                            <a class="nav-link" asp-controller="AppointmentAdm" asp-action="Index">
                                <i class="bi bi-calendar-check"></i> Citas
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="SpecialtyAdm" asp-action="Index">
                                <i class="bi bi-hospital"></i> Especialidades

                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="InsuranceProviderAdm" asp-action="Index">

                                <i class="bi bi-shield-check"></i> Seguros
                            </a>
                        </li>

                        <li class="nav-item">
                            <hr class="text-white" />
                        </li>
                        <li class="nav-item">

                            <a class="nav-link" asp-controller="Report" asp-action="Index">
                                <i class="bi bi-graph-up"></i> Reportes
                            </a>

                        </li>
                    </ul>
                </div>
            </nav>

            <main class="col-md-9 ms-sm-auto col-lg-10 content-wrapper">

                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="text-center">
        <div class="container">
            <p class="mb-0">
                &copy;
                2025 HealtSync - Sistema de Gestión Médica. Todos los derechos reservados.
            </p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>