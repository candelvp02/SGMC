@model SGMC.Web.Models.Appointment.AppointmentDetailsViewModel

@{
    ViewData["Title"] = "Cancelar Cita";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Confirmar Cancelación</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <h5 class="alert-heading">¡Atención!</h5>
                        <p>Está a punto de cancelar la siguiente cita médica.</p>
                        <hr>
                        <p class="mb-0">¿Está seguro de que desea continuar con la cancelación?</p>
                    </div>

                    <!-- Resumen de la Cita -->
                    <div class="card mb-3">
                        <div class="card-header">
                            <h5 class="mb-0">Información de la Cita</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <dl class="row">
                                        <dt class="col-sm-5">ID Cita:</dt>
                                        <dd class="col-sm-7">@Model.AppointmentId</dd>

                                        <dt class="col-sm-5">Paciente:</dt>
                                        <dd class="col-sm-7"><strong>@Model.PatientName</strong></dd>

                                        <dt class="col-sm-5">Doctor:</dt>
                                        <dd class="col-sm-7"><strong>Dr. @Model.DoctorName</strong></dd>
                                    </dl>
                                </div>
                                <div class="col-md-6">
                                    <dl class="row">
                                        <dt class="col-sm-5">Fecha:</dt>
                                        <dd class="col-sm-7">@Model.AppointmentDateFormatted</dd>

                                        <dt class="col-sm-5">Hora:</dt>
                                        <dd class="col-sm-7">@Model.AppointmentTimeFormatted</dd>

                                        <dt class="col-sm-5">Estado Actual:</dt>
                                        <dd class="col-sm-7">
                                            <span class="badge @Model.StatusBadgeClass">@Model.StatusName</span>
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Formulario de Confirmación -->
                    <form asp-action="CancelConfirmed" method="post">
                        <input type="hidden" name="id" value="@Model.AppointmentId" />

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Details" asp-route-id="@Model.AppointmentId" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> No, Mantener Cita
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-check-circle"></i> Sí, Cancelar Cita
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Información Adicional -->
            <div class="alert alert-info mt-3">
                <h6 class="alert-heading"><i class="bi bi-info-circle"></i> Políticas de Cancelación</h6>
                <ul class="mb-0">
                    <li>Las citas deben cancelarse con al menos 24 horas de anticipación</li>
                    <li>Una vez cancelada, la cita no podrá ser recuperada</li>
                    <li>El paciente y el doctor recibirán una notificación de cancelación</li>
                    <li>Puede agendar una nueva cita en cualquier momento</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}