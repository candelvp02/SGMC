@model SGMC.Web.Models.Appointment.AppointmentListViewModel

<div class="card mb-3 shadow-sm">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-start">
            <div>
                <h5 class="card-title">
                    <i class="bi bi-person"></i> @Model.PatientName
                </h5>
                <p class="card-text text-muted mb-1">
                    <i class="bi bi-person-badge"></i> Dr. @Model.DoctorName
                </p>
                <p class="card-text">
                    <i class="bi bi-calendar-event"></i> @Model.AppointmentDateFormatted
                </p>
            </div>
            <div>
                @await Html.PartialAsync("_StatusBadge", (Model.StatusId, Model.StatusName))
            </div>
        </div>
        <div class="mt-3">
            <a asp-action="Details" asp-route-id="@Model.AppointmentId"
               class="btn btn-sm btn-info">
                <i class="bi bi-eye"></i> Ver
            </a>
            @if (Model.CanEdit)
            {
                <a asp-action="Edit" asp-route-id="@Model.AppointmentId"
                   class="btn btn-sm btn-warning">
                    <i class="bi bi-pencil"></i> Editar
                </a>
            }
        </div>
    </div>
</div>