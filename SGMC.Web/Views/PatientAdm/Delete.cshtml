@model SGMC.Application.Dto.Users.PatientDto

@{
    ViewData["Title"] = "Desactivar Paciente";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Confirmar Desactivación</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <h5 class="alert-heading">¡Atención!</h5>
                        <p>Está a punto de desactivar el registro del siguiente paciente. Esta acción cambiará el estado del paciente a inactivo.</p>
                        <hr>
                        <p class="mb-0">¿Está seguro de que desea continuar?</p>
                    </div>

                    <!-- Resumen del Paciente -->
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">Información del Paciente</h5>
                            <div class="row">
                                <div class="col-md-6">
                                    <dl class="row">
                                        <dt class="col-sm-6">ID Paciente:</dt>
                                        <dd class="col-sm-6">@Model.PatientId</dd>

                                        <dt class="col-sm-6">Nombre:</dt>
                                        <dd class="col-sm-6"><strong>@Model.FullName</strong></dd>

                                        <dt class="col-sm-6">Cédula:</dt>
                                        <dd class="col-sm-6">@Model.IdentificationNumber</dd>

                                        <dt class="col-sm-6">Teléfono:</dt>
                                        <dd class="col-sm-6">@Model.PhoneNumber</dd>
                                    </dl>
                                </div>
                                <div class="col-md-6">
                                    <dl class="row">
                                        <dt class="col-sm-6">Email:</dt>
                                        <dd class="col-sm-6">@Model.Email</dd>

                                        <dt class="col-sm-6">Tipo de Sangre:</dt>
                                        <dd class="col-sm-6">
                                            <span class="badge bg-danger">@Model.BloodType</span>
                                        </dd>

                                        <dt class="col-sm-6">Proveedor de Seguro:</dt>
                                        <dd class="col-sm-6">@Model.InsuranceProviderName</dd>

                                        <dt class="col-sm-6">Estado Actual:</dt>
                                        <dd class="col-sm-6">
                                            @if (Model.IsActive)
                                            {
                                                <span class="badge bg-success">Activo</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Inactivo</span>
                                            }
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Formulario de Confirmación -->
                    <form asp-action="DeleteConfirmed" method="post">
                        <input type="hidden" name="id" value="@Model.PatientId" />

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-check-circle"></i> Confirmar Desactivación
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Notas Adicionales -->
            <div class="alert alert-info mt-3" role="alert">
                <h6 class="alert-heading"><i class="bi bi-info-circle"></i> Nota Importante</h6>
                <ul class="mb-0">
                    <li>El paciente será marcado como inactivo en el sistema</li>
                    <li>Los datos históricos del paciente se mantendrán en el sistema</li>
                    <li>Las citas futuras asociadas pueden verse afectadas</li>
                    <li>El paciente puede ser reactivado posteriormente si es necesario</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}