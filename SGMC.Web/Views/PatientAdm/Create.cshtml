@model SGMC.Application.Dto.Users.RegisterPatientDto

@{
    ViewData["Title"] = "Crear Paciente";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Crear Nuevo Paciente</h3>
                </div>

                <div class="card-body">
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">

                            @ViewBag.ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }


                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <fieldset class="border p-3 mb-4">

                            <legend class="w-auto px-2">Información Personal</legend>

                            <div class="row">
                                <div class="col-md-6 mb-3">

                                    <label asp-for="FirstName" class="form-label">Nombre</label>
                                    <input asp-for="FirstName" class="form-control" placeholder="Ej: Juan" />

                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">

                                    <label asp-for="LastName" class="form-label">Apellido</label>
                                    <input asp-for="LastName" class="form-control" placeholder="Ej: Pérez" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>

                                </div>
                            </div>

                            <div class="row">

                                <div class="col-md-6 mb-3">
                                    <label asp-for="IdentificationNumber" class="form-label">Cédula</label>
                                    <input asp-for="IdentificationNumber" class="form-control" placeholder="XXX-XXXXXXX-X" />

                                    <span asp-validation-for="IdentificationNumber" class="text-danger"></span>
                                    <small class="form-text text-muted">Formato: 001-0000001-1</small>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label asp-for="DateOfBirth" class="form-label">Fecha de Nacimiento</label>

                                    <input asp-for="DateOfBirth" type="date" class="form-control" />
                                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                </div>

                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">

                                    <label asp-for="Gender" class="form-label">Género</label>
                                    <select asp-for="Gender" class="form-select">
                                        <option value="">-- Seleccione --</option>

                                        <option value="M">Masculino</option>
                                        <option value="F">Femenino</option>

                                    </select>
                                    <span asp-validation-for="Gender" class="text-danger"></span>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label asp-for="BloodType" class="form-label">Tipo de Sangre</label>
                                    <select asp-for="BloodType" class="form-select">

                                        <option value="">-- Seleccione --</option>
                                        <option value="A+">A+</option>

                                        <option value="A-">A-</option>
                                        <option value="B+">B+</option>
                                        <option value="B-">B-</option>

                                        <option value="AB+">AB+</option>
                                        <option value="AB-">AB-</option>

                                        <option value="O+">O+</option>
                                        <option value="O-">O-</option>
                                    </select>

                                    <span asp-validation-for="BloodType" class="text-danger"></span>
                                </div>
                            </div>

                        </fieldset>

                        <fieldset class="border p-3 mb-4">

                            <legend class="w-auto px-2">Información de Contacto</legend>

                            <div class="row">
                                <div class="col-md-6 mb-3">

                                    <label asp-for="PhoneNumber" class="form-label">Teléfono</label>
                                    <input asp-for="PhoneNumber" class="form-control" placeholder="XXX-XXX-XXXX" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>

                                    <small class="form-text text-muted">Formato: 809-123-4567</small>
                                </div>
                                <div class="col-md-6 mb-3">

                                    <label asp-for="Email" class="form-label">Email</label>
                                    <input asp-for="Email" type="email" class="form-control" placeholder="ejemplo@correo.com" />

                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="mb-3">

                                <label asp-for="Address" class="form-label">Dirección</label>
                                <textarea asp-for="Address" class="form-control" rows="2" placeholder="Dirección completa"></textarea>

                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </fieldset>

                        <fieldset class="border p-3 mb-4">
                            <legend class="w-auto px-2">Contacto de Emergencia</legend>

                            <div class="row">

                                <div class="col-md-6 mb-3">
                                    <label asp-for="EmergencyContactName" class="form-label">Nombre del Contacto</label>
                                    <input asp-for="EmergencyContactName" class="form-control" />

                                    <span asp-validation-for="EmergencyContactName" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">

                                    <label asp-for="EmergencyContactPhone" class="form-label">Teléfono de Emergencia</label>
                                    <input asp-for="EmergencyContactPhone" class="form-control" placeholder="XXX-XXX-XXXX" />
                                    <span asp-validation-for="EmergencyContactPhone" class="text-danger"></span>
                                </div>
                            </div>
                        </fieldset>


                        <fieldset class="border p-3 mb-4">
                            <legend class="w-auto px-2">Información Médica</legend>


                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Allergies" class="form-label">Alergias</label>

                                    <textarea asp-for="Allergies" class="form-control" rows="2" placeholder="Ingrese alergias conocidas"></textarea>
                                    <span asp-validation-for="Allergies" class="text-danger"></span>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label asp-for="InsuranceProviderId" class="form-label">Proveedor de Seguro</label>
                                    <select asp-for="InsuranceProviderId"
                                            class="form-select">
                                        <option value="">-- Seleccione --</option>
                                        @if (ViewBag.InsuranceProviders != null)

                                        {
                                            @foreach (var provider in ViewBag.InsuranceProviders)

                                            {
                                                <option value="@provider.InsuranceProviderId">@provider.Name</option>

                                            }
                                        }
                                    </select>

                                    <span asp-validation-for="InsuranceProviderId" class="text-danger"></span>
                                </div>
                            </div>

                        </fieldset>

                        <fieldset class="border p-3 mb-4">
                            <legend class="w-auto px-2">Credenciales de Acceso</legend>


                            <div class="mb-3">
                                <label asp-for="Password" class="form-label">Contraseña</label>
                                <input asp-for="Password" type="password" class="form-control" />

                                <span asp-validation-for="Password" class="text-danger"></span>
                                <small class="form-text text-muted">Mínimo 8 caracteres, debe incluir mayúsculas, minúsculas y números</small>
                            </div>

                        </fieldset>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">

                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">

                                <i class="bi bi-save"></i> Guardar Paciente
                            </button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}