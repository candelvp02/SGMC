@model SGMC.Application.Dto.Users.PatientDto

@{
    ViewData["Title"] = "Detalles del Paciente";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="mb-0">Detalles del Paciente</h3>
                        @if (Model != null && Model.IsActive)
                        {
                            <span class="badge bg-success">Activo</span>
                        }
                        else if (Model != null)
                        {
                            <span class="badge bg-danger">Inactivo</span>
                        }
                    </div>
                </div>
                <div class="card-body">
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger">
                            @ViewBag.ErrorMessage
                        </div>
                    }
                    @if (Model == null)
                    {
                        <div class="alert alert-danger">
                            No se pudo cargar la información del paciente.
                        </div>
                    }
                    else
                    {
                        <div class="card mb-3">
                            <div class="card-header bg-light">
                                <h5 class="mb-0"><i class="bi bi-person-badge"></i> Información Personal</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <dl class="row">
                                            <dt class="col-sm-5">ID Paciente:</dt>
                                            <dd class="col-sm-7">@Model.PatientId</dd>

                                            <dt class="col-sm-5">Nombre Completo:</dt>
                                            <dd class="col-sm-7"><strong>@Model.FullName</strong></dd>

                                            <dt class="col-sm-5">Cédula:</dt>
                                            <dd class="col-sm-7">@Model.IdentificationNumber</dd>

                                            <dt class="col-sm-5">Fecha de Nacimiento:</dt>
                                            <dd class="col-sm-7">
                                                @if (Model.DateOfBirth.HasValue)
                                                {
                                                    @Model.DateOfBirth.Value.ToString("dd/MM/yyyy")
                                                }
                                                else
                                                {
                                                    <em>No especificada</em>
                                                }
                                            </dd>
                                        </dl>
                                    </div>
                                    <div class="col-md-6">
                                        <dl class="row">
                                            <dt class="col-sm-5">Género:</dt>
                                            <dd class="col-sm-7">
                                                @(Model.Gender == "M" ? "Masculino" : Model.Gender == "F" ? "Femenino" : "No especificado")
                                            </dd>

                                            <dt class="col-sm-5">Tipo de Sangre:</dt>
                                            <dd class="col-sm-7">
                                                <span class="badge bg-danger">@Model.BloodType</span>
                                            </dd>

                                            <dt class="col-sm-5">Email:</dt>
                                            <dd class="col-sm-7">
                                                <a href="mailto:@Model.Email">@Model.Email</a>
                                            </dd>
                                        </dl>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card mb-3">
                            <div class="card-header bg-light">
                                <h5 class="mb-0"><i class="bi bi-telephone"></i> Información de Contacto</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <dl class="row">
                                            <dt class="col-sm-5">Teléfono:</dt>
                                            <dd class="col-sm-7">
                                                <a href="tel:@Model.PhoneNumber">@Model.PhoneNumber</a>
                                            </dd>

                                            <dt class="col-sm-5">Dirección:</dt>
                                            <dd class="col-sm-7">@Model.Address</dd>
                                        </dl>
                                    </div>
                                    <div class="col-md-6">
                                        <dl class="row">
                                            <dt class="col-sm-6">Contacto de Emergencia:</dt>
                                            <dd class="col-sm-6"><strong>@Model.EmergencyContactName</strong></dd>

                                            <dt class="col-sm-6">Teléfono de Emergencia:</dt>
                                            <dd class="col-sm-6">
                                                <a href="tel:@Model.EmergencyContactPhone">@Model.EmergencyContactPhone</a>
                                            </dd>
                                        </dl>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card mb-3">
                            <div class="card-header bg-light">
                                <h5 class="mb-0"><i class="bi bi-heart-pulse"></i> Información Médica</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <dl class="row">
                                            <dt class="col-sm-5">Proveedor de Seguro:</dt>
                                            <dd class="col-sm-7">
                                                <span class="badge bg-primary">@Model.InsuranceProviderName</span>
                                            </dd>
                                        </dl>
                                    </div>
                                    <div class="col-md-6">
                                        <dl class="row">
                                            <dt class="col-sm-5">Alergias:</dt>
                                            <dd class="col-sm-7">
                                                @if (!string.IsNullOrWhiteSpace(Model.Allergies))
                                                {
                                                    <div class="alert alert-warning mb-0 py-1">
                                                        <i class="bi bi-exclamation-triangle"></i> @Model.Allergies
                                                    </div>
                                                }
                                                else
                                                {
                                                    <em>Sin alergias registradas</em>
                                                }
                                            </dd>
                                        </dl>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Volver al Listado
                            </a>
                            <a asp-action="Edit" asp-route-id="@Model.PatientId" class="btn btn-warning">
                                <i class="bi bi-pencil"></i> Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.PatientId" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Desactivar
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}