@model SGMC.Application.Dto.Users.DoctorDto

@{
    ViewData["Title"] = "Detalles del Doctor";
}

<h1>Detalles del Doctor</h1>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">ID</dt>
        <dd class="col-sm-9">@Model.DoctorId</dd>

        <dt class="col-sm-3">Nombre Completo</dt>
        <dd class="col-sm-9">@Model.FullName</dd>

        <dt class="col-sm-3">Fecha de Nacimiento</dt>
        <dd class="col-sm-9">@Model.DateOfBirth</dd>

        <dt class="col-sm-3">Cédula</dt>
        <dd class="col-sm-9">@Model.IdentificationNumber</dd>

        <dt class="col-sm-3">Género</dt>
        <dd class="col-sm-9">@(Model.Gender == "M" ? "Masculino" : "Femenino")</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Teléfono</dt>
        <dd class="col-sm-9">@Model.PhoneNumber</dd>

        <dt class="col-sm-3">Especialidad</dt>
        <dd class="col-sm-9">@Model.SpecialtyName</dd>

        <dt class="col-sm-3">Número de Licencia</dt>
        <dd class="col-sm-9">@Model.LicenseNumber</dd>

        <dt class="col-sm-3">Vencimiento de Licencia</dt>
        <dd class="col-sm-9">@Model.LicenseExpirationDate</dd>

        <dt class="col-sm-3">Años de Experiencia</dt>
        <dd class="col-sm-9">@Model.YearsOfExperience</dd>

        <dt class="col-sm-3">Educación</dt>
        <dd class="col-sm-9">@Model.Education</dd>

        <dt class="col-sm-3">Biografía</dt>
        <dd class="col-sm-9">@Model.Bio</dd>

        <dt class="col-sm-3">Tarifa de Consulta</dt>
        <dd class="col-sm-9">@Model.ConsultationFee?.ToString("C")</dd>

        <dt class="col-sm-3">Dirección de Clínica</dt>
        <dd class="col-sm-9">@Model.ClinicAddress</dd>

        <dt class="col-sm-3">Estado</dt>
        <dd class="col-sm-9">
            @if (Model.IsActive)
            {
                <span class="badge bg-success">Activo</span>
            }
            else
            {
                <span class="badge bg-danger">Inactivo</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.DoctorId" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
</div>