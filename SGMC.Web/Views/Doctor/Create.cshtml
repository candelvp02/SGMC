@model SGMC.Application.Dto.Users.RegisterDoctorDto

@{
    ViewData["Title"] = "Crear Doctor";
}

<h1>Crear Nuevo Doctor</h1>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <h4>Información Personal</h4>
            <div class="form-group mb-3">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DateOfBirth" class="control-label"></label>
                <input asp-for="DateOfBirth" class="form-control" type="date" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="IdentificationNumber" class="control-label"></label>
                <input asp-for="IdentificationNumber" class="form-control" placeholder="XXX-XXXXXXX-X" />
                <span asp-validation-for="IdentificationNumber" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Gender" class="control-label"></label>
                <select asp-for="Gender" class="form-control">
                    <option value="">Seleccione...</option>
                    <option value="M">Masculino</option>
                    <option value="F">Femenino</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <h4>Información de Contacto</h4>
            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="XXX-XXX-XXXX" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <h4>Información Profesional</h4>
            <div class="form-group mb-3">
                <label asp-for="SpecialtyId" class="control-label">Especialidad</label>
                <input asp-for="SpecialtyId" class="form-control" type="number" />
                <span asp-validation-for="SpecialtyId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="LicenseNumber" class="control-label"></label>
                <input asp-for="LicenseNumber" class="form-control" />
                <span asp-validation-for="LicenseNumber" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="LicenseExpirationDate" class="control-label"></label>
                <input asp-for="LicenseExpirationDate" class="form-control" type="date" />
                <span asp-validation-for="LicenseExpirationDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="YearsOfExperience" class="control-label"></label>
                <input asp-for="YearsOfExperience" class="form-control" type="number" />
                <span asp-validation-for="YearsOfExperience" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Education" class="control-label"></label>
                <textarea asp-for="Education" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Education" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Bio" class="control-label"></label>
                <textarea asp-for="Bio" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Bio" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ConsultationFee" class="control-label"></label>
                <input asp-for="ConsultationFee" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="ConsultationFee" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ClinicAddress" class="control-label"></label>
                <textarea asp-for="ClinicAddress" class="form-control" rows="2"></textarea>
                <span asp-validation-for="ClinicAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}